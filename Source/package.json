{
    "name": "back",
    "displayName": "Backstention",
    "description": "Backlang is focused on language orientated programming",
    "icon": "media/logo.png",
    "version": "0.0.54",
    "publisher": "furesoft",
    "engines": {
        "vscode": "^1.66.0"
    },
	"repository": {
		"type": "git",
		"url": "https://github.com/Backlang-Team/VSCode-Extension"
	},
    "categories": [
        "Programming Languages",
		"Languages"
    ],
	"activationEvents": [
        "onLanguage:back"
    ],   
    "main": "./out/extension",  
    "contributes": {
        "languages": [{
            "id": "back",
            "aliases": ["Backlang", "back"],
            "extensions": [".back"],
            "configuration": "./language-configuration.json",
            "icon": {
                "light": "./media/logo.svg",
                "dark": "./media/logo.svg"
            }
        }],
        "grammars": [{
            "language": "back",
            "scopeName": "source.back",
            "path": "./syntaxes/back.tmLanguage.json"
        }],
		"snippets": [
            {
                "language": "back",
                "path": "./snippets/snippets.code-snippets"
            }
        ]
    },
	"scripts": {
		"vscode:prepublish": "npm install && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w"
	},
	"devDependencies": {
		"@types/node": "^18.0.0",
		"@types/vscode": "^1.66.0",
		"@types/mocha": "^9.1.1",		
		"vscode-languageclient": "^8.0.1",
		"eslint": "^8.18.0",
		"typescript": "^4.5.5"
	}
}